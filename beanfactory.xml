<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
    
    <bean id = "categories" class = "com.springframework.autowiring.byname.beanfactory.Categories" autowire = "byName">
    
    <property name="name" value = "Car Insurance"></property>
  
    </bean>
    
    <bean id = "policy" class = "com.springframework.autowiring.byname.beanfactory.Policy">
    
    <property name="planName" value = "Term Plan"></property>
    <property name="planAmount" value = "7500"></property>
    
    </bean>
    
</beans>